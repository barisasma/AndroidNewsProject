<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_gisim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="17dp"
        android:text="Gazete AdÄ±: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_gadres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_gisim"
        android:layout_below="@+id/et_gisim"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="32dp"
        android:text="Web Adresi(https://):  "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/et_adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_gadres"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:ems="10" />

    <EditText
        android:id="@+id/et_gisim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_gisim"
         android:layout_margin="5dp"
        android:ems="10"
        android:nextFocusDown="@+id/et_adress" >

        <requestFocus />
    </EditText>

</RelativeLayout>
